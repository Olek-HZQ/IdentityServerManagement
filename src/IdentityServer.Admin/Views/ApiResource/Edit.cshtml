@model IdentityServer.Admin.Models.ApiResource.ApiResourceModel

@{
    ViewBag.Title = T("ApiResource.Edit").Text;
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="ApiResource" asp-action="Index">@T("ApiResource.PageTitle").Text</a></li>
                <li class="breadcrumb-item active" aria-current="page">@T("ApiResource.Edit").Text - @Model.Name</li>
            </ol>
        </nav>
    </div>
</div>

<form asp-action="Edit" method="post" id="api-resource-form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <!--Hidden -->
    <input type="hidden" asp-for="Id" />

    <div class="card mt-3">
        <h5 class="card-header">@T("ApiResource.Edit").Text</h5>
        <div class="card-body">
            @await Html.PartialAsync("_CreateOrUpdate", Model)
        </div>
    </div>

</form>

@section scripts
{
    <script>
        $(function () {
            //Disable enter for this form
            FormMvc.disableEnter($('#api-resource-form'));
        });
    </script>
}