@using IdentityServer.Admin.Common
@model IdentityServer.Admin.Core.Dtos.ApiResource.PagedApiResourceDto
@{
    ViewBag.Title = T("ApiResource.PageTitle").Text;
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <h2>@T("ApiResource.PageTitle").Text</h2>
    </div>

    <div class="col-12">
        <a asp-action="Create" class="btn btn-outline-primary mb-3"><span class="oi oi-plus"></span> @T("ApiResource.Add").Text</a>
    </div>

    <div class="col-12">
        @await Html.PartialAsync("Common/Search", new Search { Action = "Index", Controller = "ApiResource" })
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>@T("ApiResources.Fields.Name").Text</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DataPagedList)
                    {
                        <tr>
                            <th scope="row"><a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">@T("Common.Edit").Text</a></th>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><span class="oi oi-x"></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        @await Html.PartialAsync("Common/Pager", new Pager { Action = "Index", PageSize = Model.PageSize, TotalCount = Model.TotalCount, EnableSearch = true, Search = ViewBag.Search })
    </div>
</div>