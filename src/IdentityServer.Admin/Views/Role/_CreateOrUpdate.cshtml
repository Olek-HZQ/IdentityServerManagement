@using IdentityServer.Admin.Helpers
@model IdentityServer.Admin.Models.Role.RoleModel
<!--Input - text -->
<div class="form-group row">
    <label asp-for="Name" class="col-sm-3 col-form-label">
        @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Roles.Fields.Name").Text, ""))
    </label>
    <div class="col-sm-9">
        <input type="text" required class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>

<!--Input - text -->
<div class="form-group row">
    <label asp-for="SystemName" class="col-sm-3 col-form-label">
        @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Roles.Fields.SystemName").Text, ""))
    </label>
    <div class="col-sm-9">
        <input type="text" required class="form-control" asp-for="SystemName">
        <span asp-validation-for="SystemName" class="text-danger"></span>
    </div>
</div>