@model IdentityServer.Admin.Models.Role.RoleModel

@{
    ViewBag.Title = T("Roles.Edit").Text;
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">@T("Roles.PageTitle").Text</a></li>
                <li class="breadcrumb-item active" aria-current="page">@T("Roles.Edit").Text</li>
            </ol>
        </nav>
    </div>
</div>

<form id="client-form" asp-action="Edit" Method="post">

    <div asp-validation-summary="All" class="text-danger"></div>
    <!--Hidden -->
    <input type="hidden" asp-for="Id" />

    <!--Button-->
    <div class="form-group row">
        <div class="col-md-12 col-m-b-10  col-m-t-10">
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">@T("Common.Delete")</a>
        </div>
    </div>

    <div class="card mt-3">
        <h5 class="card-header">@T("Roles.Edit").Text</h5>
        <div class="card-body">

            <div class="row">
                <div class="col-sm-10">

                    @await Html.PartialAsync("_CreateOrUpdate", Model)

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-primary">@T("Common.Save")</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>