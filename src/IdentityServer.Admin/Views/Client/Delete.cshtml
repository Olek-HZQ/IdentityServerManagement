@using IdentityServer.Admin.Helpers
@model IdentityServer.Admin.Models.Client.ClientModel

@{
    ViewBag.Title = T("Clients.Delete").Text;
    Layout = "_Layout";
}


<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Client" asp-action="Index">@T("Client.PageTitle").Text</a></li>
                <li class="breadcrumb-item"><a asp-controller="Client" asp-action="Edit" asp-route-id="@Model.Id">@T("Clients.Edit").Text - @Model.ClientName</a></li>
                <li class="breadcrumb-item active" aria-current="page">@T("Clients.Delete").Text</li>
            </ol>
        </nav>
    </div>
</div>

<form id="client-form" asp-controller="Client" asp-action="Delete" Method="post">

    <!--Hidden -->
    <input type="hidden" asp-for="Id" />

    <!--Hidden -->
    <input type="hidden" asp-for="ClientName" />

    <h2>@T("Clients.Delete").Text</h2>

    <div class="card mt-3">
        <h5 class="card-header">@T("Clients.Delete").Text</h5>
        <div class="card-body">
            <!--Input - text -->
            <div class="form-group row">
                <label asp-for="ClientId" class="col-sm-3 col-form-label">
                    @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Clients.ClientId").Text, T("Clients.ClientId.Hint").Text))
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="ClientId" disabled="disabled" />
                </div>
            </div>

            <!--Input - text -->
            <div class="form-group row">
                <label asp-for="ClientName" class="col-sm-3 col-form-label">
                    @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Clients.ClientName").Text, T("Clients.ClientName.Hint").Text))
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" disabled="disabled" asp-for="ClientName" />
                </div>
            </div>

            <!--Button-->
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">
                </label>
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-danger">@T("Common.Delete")</button>
                </div>
            </div>
        </div>
    </div>
</form>





