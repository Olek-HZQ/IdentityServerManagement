@using IdentityServer.Admin.Common
@model IdentityServer.Admin.Core.Dtos.PagedClientDto
@{
    ViewBag.Title = "Client Index";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <h2>客户端</h2>
    </div>

    <div class="col-12">
        <a asp-action="Create" class="btn btn-outline-primary mb-3"><span class="oi oi-plus"></span>添加客户端</a>
    </div>

    <div class="col-12">
        @await Html.PartialAsync("Common/Search", new Search { Action = "Index", Controller = "Client" })
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th></th>
                    <th>客户端标识</th>
                    <th>客户端名称</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var client in Model.DataPagedList)
                {
                    <tr>
                        <th><a class="btn btn-primary" asp-action="Edit" asp-route-id="@client.Id">编辑</a></th>
                        <td>@client.ClientId</td>
                        <td>@client.ClientName</td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@client.Id"><span class="oi oi-x"></span></a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        @await Html.PartialAsync("Common/Pager", new Pager { Action = "Index", PageSize = Model.PageSize, TotalCount = Model.TotalCount, Search = ViewBag.Search, EnableSearch = true })
    </div>
</div>