@using IdentityServer.Admin.Helpers
@model IdentityServer.Admin.Models.Client.ClientModel

<div class="card mt-3">
    <h5 class="card-header">@T("Clients.NavAuthentication").Text</h5>
    <div class="card-body">
        <!--Input - text -->
        <div class="form-group row">
            <label asp-for="FrontChannelLogoutUri" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Clients.FrontChannelLogoutUri").Text, T("Clients.FrontChannelLogoutUri.Hint").Text))
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="FrontChannelLogoutUri">
            </div>
        </div>

        <!--Checkbox-->
        <div class="form-group row">
            <label asp-for="FrontChannelLogoutSessionRequired" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Clients.FrontChannelLogoutSessionRequired").Text, T("Clients.FrontChannelLogoutSessionRequired.Hint").Text))
            </label>
            <div class="col-sm-9">
                <toggle-button>
                    <input asp-for="FrontChannelLogoutSessionRequired" type="checkbox">
                </toggle-button>
            </div>
        </div>

        <!--Input - text -->
        <div class="form-group row">
            <label asp-for="BackChannelLogoutUri" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Clients.BackChannelLogoutUri").Text, T("Clients.BackChannelLogoutUri.Hint").Text))
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="BackChannelLogoutUri">
            </div>
        </div>

        <!--Checkbox-->
        <div class="form-group row">
            <label asp-for="BackChannelLogoutSessionRequired" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Clients.BackChannelLogoutSessionRequired").Text, T("Clients.BackChannelLogoutSessionRequired.Hint").Text))
            </label>
            <div class="col-sm-9">
                <toggle-button>
                    <input asp-for="BackChannelLogoutSessionRequired" type="checkbox">
                </toggle-button>
            </div>
        </div>

        <!--Checkbox-->
        <div class="form-group row">
            <label asp-for="EnableLocalLogin" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Clients.EnableLocalLogin").Text, T("Clients.EnableLocalLogin.Hint").Text))
            </label>
            <div class="col-sm-9">
                <toggle-button>
                    <input asp-for="EnableLocalLogin" type="checkbox">
                </toggle-button>
            </div>
        </div>

        <!--Select with tags-->
        <div class="form-group row">
            <label asp-for="PostLogoutRedirectUrisItems" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Clients.PostLogoutRedirectUris").Text, T("Clients.PostLogoutRedirectUris.Hint").Text))
            </label>
            <div class="col-sm-9">
                <picker id="PostLogoutRedirectUrisItems" multiple-select="true" min-search-text="2"
                        selected-items="@Model.PostLogoutRedirectUris.Select(x=>x.PostLogoutRedirectUri).ToList()"
                        search-input-placeholder="@T("Common.PickerSearchItemPlaceholder").Text"
                        selected-items-title="@T("Common.PickerSelectedItemsTitle").Text"
                        search-result-title="@T("Common.PickerSearchResultTitle").Text"
                        suggested-items-title="@T("Common.PickerSuggestedItemsTitle").Text"
                        no-item-selected-title="@T("Common.PickerNoItemSelectedTitle").Text"
                        show-all-items-title="@T("Common.PickerShowAllItemsTitle").Text"
                        item-already-selected-title="@T("Common.PickerItemAlreadySelectedTitle").Text">
                </picker>
            </div>
        </div>

        <!--Select with tags-->
        <div class="form-group row">
            <label asp-for="IdentityProviderRestrictionsItems" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Clients.IdentityProviderRestrictions").Text, T("Clients.IdentityProviderRestrictions.Hint").Text))
            </label>
            <div class="col-sm-9">
                <picker id="IdentityProviderRestrictionsItems" multiple-select="true" min-search-text="2"
                        selected-items="@Model.IdentityProviderRestrictions.Select(x=>x.Provider).ToList()"
                        search-input-placeholder="@T("Common.PickerSearchItemPlaceholder").Text"
                        selected-items-title="@T("Common.PickerSelectedItemsTitle").Text"
                        search-result-title="@T("Common.PickerSearchResultTitle").Text"
                        suggested-items-title="@T("Common.PickerSuggestedItemsTitle").Text"
                        no-item-selected-title="@T("Common.PickerNoItemSelectedTitle").Text"
                        show-all-items-title="@T("Common.PickerShowAllItemsTitle").Text"
                        item-already-selected-title="@T("Common.PickerItemAlreadySelectedTitle").Text">
                </picker>
            </div>
        </div>

        <!--Input - number -->
        <div class="form-group row">
            <label asp-for="UserSsoLifetime" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Clients.UserSsoLifetime").Text, T("Clients.UserSsoLifetime.Hint").Text))
            </label>
            <div class="col-sm-9">
                <input type="number" class="form-control" asp-for="UserSsoLifetime">
            </div>
        </div>
    </div>
</div>





