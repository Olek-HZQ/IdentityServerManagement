@using IdentityServer.Admin.Helpers
@model IdentityServer.Admin.Models.Client.ClientModel

<div class="card mt-3">
    <h5 class="card-header">@T("Clients.NavDeviceFlow").Text</h5>
    <div class="card-body">
        <!--Input - text -->
        <div class="form-group row">
            <label asp-for="UserCodeType" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Clients.UserCodeType").Text, T("Clients.UserCodeType.Hint").Text))
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="UserCodeType">
            </div>
        </div>

        <!--Input - number -->
        <div class="form-group row">
            <label asp-for="DeviceCodeLifetime" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Clients.DeviceCodeLifetime").Text, T("Clients.DeviceCodeLifetime.Hint").Text))
            </label>
            <div class="col-sm-9">
                <input type="number" class="form-control" asp-for="DeviceCodeLifetime">
            </div>
        </div>
    </div>
</div>





