@using IdentityServer.Admin.Helpers
@model ClientModel

<div class="card mt-3">
    <h5 class="card-header">设备流程</h5>
    <div class="card-body">
        <!--Input - text -->
        <div class="form-group row">
            <label asp-for="UserCodeType" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel("用户代码类型", "指定用于客户端的用户代码的类型。 否则回落到默认值"))
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="UserCodeType">
            </div>
        </div>

        <!--Input - number -->
        <div class="form-group row">
            <label asp-for="DeviceCodeLifetime" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel("设备代码生命周期", "设备代码的生命周期（以秒为单位）（默认为 300 秒/5 分钟）"))
            </label>
            <div class="col-sm-9">
                <input type="number" class="form-control" asp-for="DeviceCodeLifetime">
            </div>
        </div>
    </div>
</div>





