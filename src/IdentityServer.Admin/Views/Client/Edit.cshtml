@model IdentityServer.Admin.Models.Client.ClientModel

@{
    ViewBag.Title = T("Clients.Edit").Text;
    Layout = "_Layout";
}

<form id="client-form" asp-controller="Client" asp-action="Edit" Method="post">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Client" asp-action="Index">@T("Client.PageTitle").Text</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@T("Clients.Edit").Text - @Model.ClientName</li>
                </ol>
            </nav>
        </div>

        @if (Model.Id != 0)
        {
            <div class="col-12">
                <h2>@T("Clients.Edit").Text - @Model.ClientId</h2>
            </div>
        }

        <div class="col-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>

    @if (Model.Id != 0)
    {
        @await Html.PartialAsync("Section/ActionButtons")
    }
    @await Html.PartialAsync("Settings")
    @await Html.PartialAsync("Section/ActionButtons")
</form>

@section scripts
{
    <script>
        $(function () {
            //Disable enter for this form
            FormMvc.disableEnter($('#client-form'));

            //Radio image
            $("label.radio-img>img").click(function () {
                $(this).parent().find("input:radio").click();
            });
        });
    </script>
}