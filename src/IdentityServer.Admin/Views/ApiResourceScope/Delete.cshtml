@using IdentityServer.Admin.Helpers
@model IdentityServer.Admin.Models.ApiResource.ApiResourceScopeModel

@{
    ViewBag.Title = T("ApiResourceScope.Delete").Text;
    Layout = "_Layout";
}

<form asp-action="Delete" Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="ApiResource" asp-action="Index">@T("ApiResource.PageTitle").Text</a></li>
                    <li class="breadcrumb-item"><a asp-controller="ApiResource" asp-action="Edit" asp-route-id="@Model.ApiResourceId">@T("ApiResource.Edit").Text - @Model.ApiResourceName</a></li>
                    <li class="breadcrumb-item"><a asp-controller="ApiResourceScope" asp-action="Index" asp-route-apiResourceId="@Model.ApiResourceId">@T("ApiResourceScope.PageTitle").Text</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@T("ApiResourceScope.Delete").Text</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12">
            <!--Hidden -->
            <input type="hidden" asp-for="Id" />
            
            <!--Hidden -->
            <input type="hidden" asp-for="ApiResourceId" />

            <div class="card mt-3">
                <h5 class="card-header">@T("ApiResourceScope.Delete").Text</h5>
                <div class="card-body">

                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="Scope" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("ApiResourceScope.Fields.Name").Text, ""))
                        </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="Scope">
                        </div>
                    </div>

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-danger">@T("Common.Delete").Text</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>