@{
    ViewData["Title"] = "后台首页";
    Layout = "_Layout";
}

<div class="welcome-block px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">IdentityServer4后台管理</h1>
</div>

<!-- Cards -->
<div class="card-deck mb-3 text-center">
    <!-- Clients -->
    <div class="card mb-4 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">客户端</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-monitor" title="Clients" aria-hidden="true"></span>
            </h1>
            <a asp-controller="Client" asp-action="Index" class="btn btn-lg btn-block btn-primary">管理</a>
        </div>
    </div>
    <!-- Identity Resources -->
    <div class="card mb-4 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">身份资源</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-tags" title="Identity Resources" aria-hidden="true"></span>
            </h1>
            <a asp-controller="IdentityResource" asp-action="Index" class="btn btn-lg btn-block btn-outline-primary">管理</a>
        </div>
    </div>
    <!-- Api Resources -->
    <div class="card mb-4 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">API资源</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-cloud" title="Api Resources" aria-hidden="true"></span>
            </h1>
            <a asp-controller="ApiResource" asp-action="Index" class="btn btn-lg btn-block btn-primary">管理</a>
        </div>
    </div>
</div>
<div class="card-deck mb-3 text-center">
    <!-- Api Scopes -->
    <div class="card mb-4 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">API作用域</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-cloud" title="Api Resources" aria-hidden="true"></span>
            </h1>
            <a asp-controller="ApiScope" asp-action="Index" class="btn btn-lg btn-block btn-outline-primary">管理</a>
        </div>
    </div>
    <!-- Users -->
    <div class="card mb-4 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">用户</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-person" title="Users" aria-hidden="true"></span>
            </h1>
            <a asp-controller="User" asp-action="Index" class="btn btn-lg btn-block btn-primary">管理</a>
        </div>
    </div>
    <!-- Roles -->
    <div class="card mb-4 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">角色</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-lock-locked" title="Roles" aria-hidden="true"></span>
            </h1>
            <a asp-controller="Role" asp-action="Index" class="btn btn-lg btn-block btn-outline-primary">管理</a>
        </div>
    </div>
</div>
<div class="card-deck mb-3 text-center">
    <!-- Persisted Grants -->
    <div class="card mb-4 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">持久授权</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-key" title="Persisted Grants" aria-hidden="true"></span>
            </h1>
            <a asp-controller="PersistedGrant" asp-action="Index" class="btn btn-lg btn-block btn-primary">管理</a>
        </div>
    </div>
</div>