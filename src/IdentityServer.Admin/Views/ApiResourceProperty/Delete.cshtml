@using IdentityServer.Admin.Helpers
@model IdentityServer.Admin.Models.ApiResource.ApiResourcePropertyModel

@{
    ViewBag.Title = T("ApiResourceProperty.Delete").Text;
    Layout = "_Layout";
}

<form asp-action="Delete" Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="ApiResource" asp-action="Index">@T("ApiResource.PageTitle").Text</a></li>
                    <li class="breadcrumb-item"><a asp-controller="ApiResource" asp-action="Edit" asp-route-id="@Model.ApiResourceId">@T("ApiResource.Edit").Text - @Model.ApiResourceName</a></li>
                    <li class="breadcrumb-item"><a asp-controller="ApiResourceProperty" asp-action="Index" asp-route-apiResourceId="@Model.ApiResourceId">@T("ApiResourceProperty.PageTitle").Text</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@T("ApiResourceProperty.Delete").Text</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12">
            <!--Hidden -->
            <input type="hidden" asp-for="Id" />
            
            <!--Hidden -->
            <input type="hidden" asp-for="ApiResourceId" />

            <div class="card mt-3">
                <div class="card-body">

                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="Key" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("ApiResourceProperty.Key").Text, ""))
                        </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="Key">
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="Value" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("ApiResourceProperty.Value").Text, ""))
                        </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="Value">
                        </div>
                    </div>

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-danger">@T("Common.Delete").Text</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>