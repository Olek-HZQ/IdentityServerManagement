@using IdentityServer.Admin.Helpers
@model ClientClaimModel

@{
    ViewBag.Title = "删除客户端声明";
    Layout = "_Layout";
}

<form asp-action="Delete" Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Client" asp-action="Index">客户端</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Client" asp-action="Edit" asp-route-id="@Model.ClientId">@ViewBag.ClientName</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Client" asp-action="Index" asp-route-id="@Model.ClientId">客户端密钥</a></li>
                    <li class="breadcrumb-item active" aria-current="page">删除客户端声明</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12">
            <h3>删除客户端声明</h3>

            <!--Hidden -->
            <input type="hidden" asp-for="Id" />

            <!--Hidden -->
            <input type="hidden" asp-for="ClientId" />

            <div class="card mt-3">
                <h5 class="card-header">删除客户端声明</h5>
                <div class="card-body">
                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="Type" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel("声明类型", ""))
                        </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="Type">
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="Value" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel("声明值", ""))
                        </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="Value">
                        </div>
                    </div>

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-danger">删除客户端声明</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>