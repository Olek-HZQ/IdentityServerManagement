@model IdentityServer.Admin.Models.PersistedGrant.PersistedGrantModel

@{
    ViewBag.Title = "删除持久授权";
    Layout = "_Layout";
}	

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">持久授权</a></li>
                <li class="breadcrumb-item"><a asp-action="Detail" asp-route-id="@Model.SubjectId">@Model.SubjectId</a></li>
                <li class="breadcrumb-item active" aria-current="page">删除持久授权</li>
            </ol>
        </nav>
    </div>

    <div class="col-12">
        <h2>删除持久授权</h2>
    </div>
</div>

<form id="client-form" asp-action="Delete" Method="post">

    <input type="hidden" asp-for="Key" />

    <div class="row table-responsive">
        <div class="col-12">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>主体标识</th>
                    <th>类型</th>
                    <th>到期</th>
                    <th>数据</th>
                    <th>客户端</th>
                </tr>
                </thead>

                <tbody>
                <tr>
                    <td>@Model.SubjectId</td>
                    <td>@Model.Type</td>
                    <td>@Model.Expiration</td>
                    <td>@Model.Data</td>
                    <td>@Model.ClientId</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-danger">删除持久授权</button>
        </div>
    </div>
</form>