@using IdentityServer.Admin.Helpers
@model UserPasswordModel

@{
    ViewBag.Title = "用户更改密码";
    Layout = "_Layout";
    var model = Model;
}

<form asp-action="ChangePassword" Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">用户</a></li>
                    <li class="breadcrumb-item"><a asp-action="Edit" asp-route-id="@Model.UserId">@Model.Name</a></li>
                    <li class="breadcrumb-item active" aria-current="page">用户更改密码</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12">
            <h3>用户更改密码</h3>

            <div asp-validation-summary="All" class="text-danger"></div>

            <!--Hidden -->
            <input type="hidden" asp-for="Id" value="@Model.Id" />

            <!--Hidden -->
            <input type="hidden" asp-for="UserId" />

            <div class="card mt-3">
                <h5 class="card-header">用户更改密码</h5>
                <div class="card-body">

                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel("用户名", "用户名"))
                        </label>
                        <div class="col-sm-9">
                            <input type="hidden" class="form-control" asp-for="Name">
                            <h4>@Model.Name</h4>
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="Password" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel("密码", "密码"))
                        </label>
                        <div class="col-sm-9">
                            <input type="password" required class="form-control" asp-for="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="ConfirmPassword" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel("确认密码", "确认密码"))
                        </label>
                        <div class="col-sm-9">
                            <input type="password" required class="form-control" asp-for="ConfirmPassword">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-danger">更改密码</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>