@using IdentityServer.Admin.Helpers
@model DeleteUserRoleModel
@{
    ViewBag.Title = "删除用户角色";
    Layout = "_Layout";
}

<form asp-action="DeleteUserRole" Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="User" asp-action="Index">用户</a></li>
                    <li class="breadcrumb-item"><a asp-controller="User" asp-action="Edit" asp-route-id="@Model.UserId">@Model.UserName</a></li>
                    <li class="breadcrumb-item"><a asp-controller="User" asp-action="UserRole" asp-route-id="@Model.UserId">用户角色</a></li>
                    <li class="breadcrumb-item active" aria-current="page">删除用户角色</li>
                </ol>
            </nav>
        </div>


        <div class="col-md-12">

            <h3>删除用户角色</h3>

            <!--Hidden -->
            <input type="hidden" asp-for="UserId" />

            <!--Hidden -->
            <input type="hidden" asp-for="RoleId" />

            <div class="card mt-3">
                <h5 class="card-header">删除用户角色</h5>
                <div class="card-body">

                    <!--Select-->
                    <div class="form-group row">
                        <label asp-for="RoleId" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel("用户角色", "用户角色"))
                        </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="RoleName">
                        </div>
                    </div>

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-danger">删除用户角色</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>