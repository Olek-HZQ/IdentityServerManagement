@using IdentityServer.Admin.Helpers
@model IdentityServer.Admin.Models.User.UserClaimModel

@{
    ViewBag.Title = T("Users.UserClaimsDelete.PageTitle").Text;
    Layout = "_Layout";
}

<form asp-action="DeleteUserClaim" Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="User" asp-action="Index">@T("Users.PageTitle").Text</a></li>
                    <li class="breadcrumb-item"><a asp-controller="User" asp-action="Edit" asp-route-id="@Model.UserId">@T("Users.Edit").Text - @Model.UserName</a></li>
                    <li class="breadcrumb-item"><a asp-action="UserClaim" asp-route-id="@Model.UserId">@T("Users.UserClaims.PageTitle").Text</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@T("Users.UserClaimsDelete.PageTitle").Text</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12">
            <h3>@T("Users.UserClaimsDelete.PageTitle").Text</h3>

            <!--Hidden -->
            <input type="hidden" asp-for="UserId" />

            <!--Hidden -->
            <input type="hidden" asp-for="Id" />

            <div class="card mt-3">
                <h5 class="card-header">@T("Users.UserClaimsDelete.PageTitle").Text</h5>
                <div class="card-body">
                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="ClaimType" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Users.UserClaims.Type").Text, ""))
                        </label>
                        <div class="col-sm-9">
                            <input type="text" disabled="disabled" class="form-control" asp-for="ClaimType">
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="ClaimValue" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("Common/Label", HtmlFormatHelper.FormatLabel(T("Users.UserClaims.Value").Text, ""))
                        </label>
                        <div class="col-sm-9">
                            <input type="text" disabled="disabled" class="form-control" asp-for="ClaimValue">
                        </div>
                    </div>

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-danger">@T("Common.Delete").Text</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>