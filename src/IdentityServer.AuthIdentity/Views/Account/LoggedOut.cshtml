@model IdentityServer.AuthIdentity.Quickstart.Account.LoggedOutViewModel

@{
    // set this so the layout rendering sees an anonymous user
    ViewData["signed-out"] = true;
}

<div class="logged-out-page">
    <h1>
        注销
        <small>您现在已退出</small>
    </h1>

    @if (Model.PostLogoutRedirectUri != null)
    {
        <div>
            @* ReSharper disable once UnknownCssClass *@
            点击 <a class="PostLogoutRedirectUri" href="@Model.PostLogoutRedirectUri">这里</a> 回到
            <span>@Model.ClientName</span>
        </div>
    }

    @if (Model.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" src="@Model.SignOutIframeUrl"></iframe>
    }
</div>

@section scripts
{
    @if (Model.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}
