@model IdentityServer.AuthIdentity.Quickstart.Account.LoginViewModel

<div>
    <div>
        <h1>Login</h1>
    </div>

    @await Html.PartialAsync("_ValidationSummary")

    <div class="row">

        <div class="col-sm-6">
            <div class="card mt-3">
                <h5 class="card-header">Local login</h5>
                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <fieldset>
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="input-username">
                                                <i class="fa fa-user"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" placeholder="user name" asp-for="Username" aria-label="Username" aria-describedby="input-username" autofocus>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="input-password">
                                                <span class="oi oi-lock-locked" title="Lock" aria-hidden="true"></span>
                                            </span>
                                        </div>
                                        <input type="password" class="form-control" placeholder="password" aria-label="Password" aria-describedby="input-password" asp-for="Password" autocomplete="off">
                                    </div>
                                </div>
                            </div>

                            @if (Model.AllowRememberLogin)
                            {
                                <div class="form-group row">
                                    <div class="col-sm-9">
                                        <div>
                                            Remember me
                                        </div>
                                        <toggle-button>
                                            <input asp-for="RememberLogin" type="checkbox">
                                        </toggle-button>
                                    </div>
                                </div>
                            }
                            <div class="form-group row">
                                <div class="col-sm-9">
                                    Default user: olek  <br/>Default password: IdentityServer4Pwd
                                </div>
                            </div>
                            <!--Button-->
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <button class="btn btn-primary" name="button" value="login">Login</button>
                                    <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                                    @*<a asp-action="ForgotPassword" asp-controller="Account" class="btn btn-info" value="forgot">忘记密码</a>
                                    <a asp-action="Register" asp-controller="Account" class="btn btn-dark" value="forgot">注册</a>*@
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

